<!-- _part/field/text -->
<%
const params = {
  rows: typeof rows === 'undefined' ? 4 : rows
};
%>
<%- include('_params', {params}) %>

<div class="form-group row<%- params.required %> <%- params.error ? 'has-error' : '' %>">
  <label for="<%- params.id %>" class="col-md-3 col-form-label" data-t=""><%- params.label %></label>
  <div class="col-md-9">
    <textarea id="<%- params.id %>" name="<%- params.name %>" <%- params.inputRequired %>
        class="form-control" rows="<%- params.rows %>"><%- params.value %></textarea>
    <div class="error-block"><%- params.error %></div>
  </div>
</div>