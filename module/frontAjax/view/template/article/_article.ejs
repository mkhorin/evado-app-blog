<div class="mb-3" data-blog-handler="Article"
     data-url="<%- _url('/api/base/data/read') %>">

    <div class="article"></div>

    <template data-id="alert">
        <div class="alert-danger alert">{{text}}</div>
    </template>

    <template data-id="article">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#" class="to-articles" data-t="">Articles</a></li>
            <li class="breadcrumb-item" data-t="">Article</li>
        </ol>
        <h1 class="mt-b">{{title}}</h1>
        <p class="mb-3"><span class="badge-info badge">{{date}}</span></p>
        <h5 class="mb-3">{{subtitle}}</h5>
        {{carousel}}
        <div class="mb-3">{{content}}</div>
        <div class="mb-3">
            <b class="mr 1"><span data-t="">Categories</span>:</b>
            {{categories}}
        </div>
        <hr>
        <a name="comments"></a>
        <h4 class="my-4">
            <span data-t="">Comments</span>
            <small>({{commentCounter}})</small>
        </h4>
        <div class="comment-list">
            {{comments}}
        </div>
        <hr>
        <%- include('./_commentForm') %>
    </template>

    <template data-id="category">
        <a href="#" data-id="{{_id}}" class="category-item tag-item">{{_title}}</a>
    </template>

    <template data-id="carousel">
        <div id="article-photos" class="carousel slide my-3" data-ride="carousel" data-interval="false" data-wrap="true">
            <div class="carousel-inner">
                {{photos}}
            </div>
            <a class="carousel-control-prev" href="#article-photos" role="button" data-slide="prev">
                <span class="fas fa-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#article-photos" role="button" data-slide="next">
                <span class="fas fa-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </template>

    <template data-id="photo">
        <div class="carousel-item {{active}}">
            <img class="d-block w-100"
                 src="<%- _url('/api/base/file/thumbnail') %>?s=large&c=photo&id={{_id}}"
                 alt="{{description}}">
            <div class="carousel-caption">{{description}}</div>
        </div>
    </template>

    <template data-id="comment">
        <div class="comment-item clearfix" data-id="{{_id}}">
            <div class="comment-icon">
                <span class="fas fa-comment-alt text-info"></span>
            </div>
            <div class="comment-column">
                <div class="comment-head">
                    <span class="text-secondary">{{date}}</span>
                    <b class="ml-1 text-info">
                        <span class="mr-1 fa fa-user"></span>
                        {{user}}
                    </b>
                </div>
                <div class="comment-body"><i>{{content}}</i></div>
            </div>
        </div>
    </template>

    <template data-id="no-comments">
        <<div class="alert alert-info" data-t="">Not commented yet</div>
    </template>
</div>