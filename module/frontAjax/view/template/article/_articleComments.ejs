<template id="article-comments">
  <div>
    <hr>
    <a name="comments"></a>
    <h4 class="my-4">
      <span data-t="">Comments</span>
      <small>({{items.length}})</small>
    </h4>
    <div v-if="items.length" class="comment-list">
      <template v-for="item in items">
        <div class="comment-item clearfix">
          <div class="comment-icon">
            <span class="fas fa-comment-alt text-info"></span>
          </div>
          <div class="comment-column">
            <div class="comment-head">
              <span class="text-secondary">{{item.date}}</span>
              <b class="ms-1 text-info">
                <span class="me-1 fa fa-user"></span>
                {{item.user}}
              </b>
            </div>
            <div class="comment-body"><i>{{item.content}}</i></div>
          </div>
        </div>
      </template>
    </div>
    <div v-else class="alert alert-info">
      <span data-t="">Not commented yet</span>
    </div>
  </div>
</template>