
<% const count = pager.getPageCount(); %>
<% const links = pager.getLinks(); %>

<% if (count > 1) { %>
<nav class="text-center">
    <ul class="pagination">
        <% if (links[pager.LINK_FIRST]) { %>
        <li><a href="<%- links[pager.LINK_FIRST] %>"><span>&laquo;</span></a></li>
        <% } else { %>
        <li class="disabled"><span>&laquo;</span></li>
        <% } if (links[pager.LINK_PREV]) { %>
            <li><a href="<%- links[pager.LINK_PREV] %>"><span>&lsaquo;</span></a></li>
        <% } else { %>
            <li class="disabled"><span>&lsaquo;</span></li>
        <% } for (let i = 0; i < count; ++i) { %>
            <% if (i === pager.page) { %>
            <li class="active"><span><%- i + 1 %></span></li>
            <% } else { %>
            <li><a href="<%- pager.createUrl(i) %>"><%- i + 1 %></a></li>
            <% } %>
        <% } if (links[pager.LINK_NEXT]) { %>
        <li><a href="<%- links[pager.LINK_NEXT] %>"><span>&rsaquo;</span></a></li>
        <% } else { %>
        <li class="disabled"><span>&rsaquo;</span></li>
        <% } if (links[pager.LINK_LAST]) { %>
        <li><a href="<%- links[pager.LINK_LAST] %>"><span>&raquo;</span></a></li>
        <% } else { %>
        <li class="disabled"><span>&raquo;</span></li>
        <% } %>
    </ul>
</nav>
<% } %>