
<% if (photos && photos.length) { %>
<% const url = _url('photo/thumbnail?s=large&id='); %>
<div id="article-photos" class="carousel slide inline-block mt20 mb20" data-interval="false" data-wrap="true">
    <div class="carousel-inner" role="listbox">
        <% for (let i = 0; i < photos.length; ++i) {
           const title = photos[i].get('description'); %>
        <div class="item <%- i === 0 ? 'active' : '' %>">
            <img data-src="<%- url + photos[i].getId() %>" title="<%= title %>" alt="">
        </div>
        <% } %>
    </div>
    <a class="left carousel-control" href="#article-photos" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#article-photos" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<% } %>