<div class="mb30" data-blog-handler="Article"
     data-url="<%- _url('/api/base/data/read') %>">

    <div class="article"></div>

    <template data-id="alert">
        <div class="alert-danger alert">{{text}}</div>
    </template>

    <template data-id="article">
        <ol class="breadcrumb">
            <li><a href="#" class="to-articles" data-t="">Articles</a></li>
            <li data-t="">Article</li>
        </ol>
        <h1 class="mt0">{{title}}</h1>
        <p class="mb20"><span class="badge badge-primary">{{date}}</span></p>
        <h4 class="mb20">{{subtitle}}</h4>
        {{carousel}}
        <div class="mb20">{{content}}</div>
        <div class="mb10">
            <b class="mr10"><span data-t="">Categories</span>:</b>
            {{categories}}
        </div>
        <hr>
        <h4 class="mt30 mb30">
            <span data-t="">Comments</span>
            <small>({{commentCounter}})</small>
        </h4>
        <a name="comments"></a>
        <div class="comment-list">
            {{comments}}
        </div>
        <hr>
        <%- include('./_commentForm') %>
    </template>

    <template data-id="category">
        <a href="#" data-id="{{_id}}" class="category-item tag-item">{{_title}}</a>
    </template>

    <template data-id="carousel">
        <div id="article-photos" class="carousel slide inline-block mt20 mb20" data-interval="false" data-wrap="true">
            <div class="carousel-inner" role="listbox">
                {{photos}}
            </div>
            <a class="left carousel-control" href="#article-photos" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#article-photos" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </template>

    <template data-id="photo">
        <div class="item {{active}}">
            <img src="<%- _url('/api/base/file/thumbnail') %>?s=large&c=photo&id={{_id}}" alt="{{description}}">
            <div class="carousel-caption">{{description}}</div>
        </div>
    </template>

    <template data-id="comment">
        <div class="comment-item clearfix" data-id="{{_id}}">
            <div class="comment-icon">
                <span class="glyphicon glyphicon-comment text-info"></span>
            </div>
            <div class="comment-column">
                <div class="comment-head">
                    <span class="text-warning">{{date}}</span>
                    <b class="ml10 text-primary">
                        <span class="mr5 fa fa-user"></span>
                        {{user}}
                    </b>
                </div>
                <div class="comment-body"><i>{{content}}</i></div>
            </div>
        </div>
    </template>

    <template data-id="no-comments">
        <<div class="alert alert-info" data-t="">Not commented yet</div>
    </template>
</div>